<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PabloYanezApuntes.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30" HorizontalOptions="Center">

            <Label Text="Pablo Yánez"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            <Label Text="Soy un apasionado de la música y del deporte. "
                   FontSize="18"
                   HorizontalOptions="Center"
                   Padding="10"
                   LineBreakMode="WordWrap"/>
            <Image Source="your_image.png"
                   HorizontalOptions="Center"
                   HeightRequest="200"/>

            <Button x:Name="CounterBtn"
                    Text="Click Me!"
                    Clicked="OnCounterClicked" />

            <Label x:Name="CounterLabel"
                   Text="Clicked 0 times"
                   FontSize="18"
                   HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
